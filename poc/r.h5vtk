#!/bin/bash

usg() {
    echo 'usage: r.h5vtk dirname h5part
  like h5vtk but dirname is relative to h5part ' >&2
    exit
}
msg() { printf "$@" >&2; }
err() { msg 'h5vtk: '; msg "$@"; msg '\n'; exit 1; }
if test $# -ne 0 -a "$1" = -h; then usg; fi


d="$1"; shift
s="$1"; shift

d0=`dirname "$s"`
d=$d0/$d"

h5vtk "$d" "$s"

